<!-- Page Title
============================================= -->
<section id="page-title">

  <div class="container clearfix center">
    <h1>Change your password</h1>
  </div>

</section>
<!-- #page-title end -->

<!-- Content
============================================= -->
<section id="content">
  <div class="content-wrap">
    <div class="container clearfix">

      <div class="col-md-3"></div>
      <div class="col-sm-12 col-md-6">
        <div class="panel panel-default">
          <div class="panel-body" style="padding: 40px;">
            <h3>Type your new password</h3>
            
            <div class="col_full">
              <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= f.hidden_field(:reset_password_token) %>
                <%= render('devise/shared/error_messages') %>

                <div class="field">
                  <%= f.label :password, "New password" %><br />
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                  <% end %>
                  <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
                </div>
              
                <div class="field">
                  <%= f.label :password_confirmation, "Confirm new password" %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                </div>
              
                <div class="actions center">
                  <%= f.submit "Change my password", class: "button button-3d button button-rounded button-green" %>
                </div>
              <% end %>
            </div>

            <div class="col_full">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </div>

</section>
<!-- #content end -->