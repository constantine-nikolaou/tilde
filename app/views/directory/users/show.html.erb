<!-- Content
============================================= -->
<section id="content">

  <div class="content-wrap">

    <div class="container clearfix">

      <div class="row clearfix">

        <div class="col-sm-9">

          <div class="row clearfix">
            <div class="col-md-2">
              <%= image_tag(@user.profile.profile_picture, class: 'alignleft img-circle img-thumbnail notopmargin nobottommargin', style: 'max-width: 84px;') %>
            </div>

            <div class="col-sm-10">
              <div class="heading-block noborder">
                <h3><%= name(@user.profile) %></h3>
                <span><%= biography(@user.profile) %></span>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</section>
