<tr class="cart_item">

  <td>
    <%= link_to admin_job.title, admin_job, class: 'link' %>
  </td>

  <td>
    <%= admin_job.company_name %>
  </td>

  <td>
    <%= boolean_icon(admin_job.approved?) %>
  </td>

  <td>
    <%= job_invitee_name(admin_job) %>
  </td>

  <td>
    <%= time_ago_in_words(admin_job.created_at) %>
  </td>

  <td>
    <% if (user_signed_in?) %>
      <% if admin_job.draft? || admin_job.under_review? %>
        <%= link_to "Edit Job", edit_job_path(admin_job), :class => "button button-3d button-mini button-rounded button-blue", target: '_blank' %>
      <% elsif admin_job.approved? %>
        <%= link_to "Take down", take_down_job_path(admin_job), class: "button button-3d button-mini button-rounded button-red", method: :put %>
      <% elsif admin_job.disabled? %>
        <%= link_to "Publish", publish_job_path(admin_job), class: "button button-3d button-mini button-rounded button-green", method: :put %>
      <% end %>
    <% end %>
  </td>
</tr>
