<tr>

  <td>
    <%= link_to job.title, job, class: 'link' %>
  </td>

  <td>
    <%= job.company_name %>
  </td>

  <td>
    <%= job_creator_name(job) %>
  </td>

  <td>
    <%= posted_date(job) %>
  </td>

  <td>
    <% if (user_signed_in? && current_user.id == job.user_id) %>
      <% if job.draft? || job.under_review? %>
        <%= link_to "Edit Job", edit_job_path(job), class: "button button-3d button-mini button-rounded button-blue" %>
      <% end %>
      <% if job.draft? || job.disabled? %>
        <%= link_to "Delete Job", job_path(job), method: :delete, class: "button button-3d button-mini button-rounded button-red" %>
      <% end %>
    <% end %>
  </td>
</tr>
