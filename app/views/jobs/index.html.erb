<!-- Page Title
============================================= -->
<section id="page-title">

  <div class="container clearfix">
    <div class="row clearfix">
      <div class="col-md-8 col-xs-12">
        <h1>Job Board</h1>
        <span class='hidden-xs'>Browse all jobs posted on MENAdevs</span>
			</div>

      <div class="col-md-4 hidden-xs">
        <%= link_to new_job_path, :class => "button button-3d notopmargin fright" do %>
          <%= fa_icon("plus", :text => "Post a Job") %>
        <% end %>
      </div>
    </div>
  </div>

</section><!-- #page-title end -->

<!-- Content
============================================= -->
<section id="content">

  <div class="content-wrap">

    <div class="container clearfix">

      <% if @jobs.blank? %>

        <div class="style-msg alertmsg">
          <div class="sb-msg"><i class="icon-warning-sign"></i>There are no jobs on MENAdevs at the moment</div>
        </div>
        <br/>

      <% else %>

        <div class="row">
          <div class="col-md-12">
            <%= render "jobs_table", locals: { jobs: @jobs } %>
          </div>
        </div>

        <%= paginate @jobs %>
      <% end %>

    </div>

  </div>

</section><!-- #content end -->

<!-- Bootstrap Data Table Plugin -->
<%= javascript_include_tag "components/bs-datatable.js", "data-turbolinks-track" => false  %>
<%= stylesheet_link_tag('bs-datatable', media: 'all',
												'data-turbolinks-track': false) %>

<script>

  $(document).ready(function() {
    $('#jobs-datatable').dataTable(
      {
        aaSorting: [[3, 'desc']]
      }
    );
  });

</script>
