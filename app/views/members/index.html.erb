<!-- Page Title
============================================= -->
<section id="page-title">

  <div class="container clearfix">
    <div class="row clearfix">
      <div class="col-md-8 col-xs-12">
        <h1>Platform users</h1>
        <span class='hidden-xs'><%= pluralize(@users_count, 'Member') %></span>
			</div>
    </div>
  </div>

</section><!-- #page-title end -->

<%= content_for :flash %>

<!-- Content
============================================= -->
<section id="content">

  <div class="content-wrap">

    <div class="container clearfix">
      <div class="row">
        <div class="col-md-12">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th></th>
                <th>Join date</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td width='5%'>
                    <%= image_tag(user.profile.avatar.url(:thumb), size: '50x50', class: 'img-thumbnail') %>
                  </td>
                  <td width='80%'>
                    <%= link_to directory_user_path(user) do %>
                      <%= user.name %> | <%= user.email %>
                      <% if user_signed_in? && current_user == user %>
                        <div class="btn btn-xs btn-primary">
                          <%= fa_icon("check") %>
                          me
                        </div>
                      <% end %>
                    <% end %>
                    <br/>
                    <small><%= user.profile.biography %></small>
                  </td>
                  <td width='15%'>
                    <%= user.created_at.strftime('%A %e %B %Y ') %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <%= paginate @users %>
    </div>
  </div>
</section>
