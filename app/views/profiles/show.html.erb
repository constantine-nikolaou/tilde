<!-- Content
============================================= -->
<section id="content">

  <div class="content-wrap">

    <div class="container clearfix">

      <div class="row clearfix">

        <div class="col-sm-9">

          <div class="row clearfix">
            <div class="col-md-2">
              <%= image_tag(@profile.avatar.url(:thumb), class: 'aligncenter img-circle img-thumbnail notopmargin nobottommargin', style: 'max-width: 100px;') %>
            </div>

            <div class="col-sm-10">
              <div class="heading-block noborder">
                <h3><%= name(@profile) %></h3>
                <span><%= biography(@profile) %></span>
              </div>
            </div>
          </div>

          <div class="clear"></div>

          <div class="row clearfix">
            <div class="col-md-2"></div>
            <div class="col-md-10">
              <!-- Work experience begins -->

              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title">Experience</h3>
                </div>

                <div class="panel-body">
                  <div class="row">
                    <div class="col-md-3">
                      <strong>Company</strong>
                    </div>

                    <div class="col-md-9">
                    </div>
                  </div>

                  <br/>

                  <div class="row">
                    <div class="col-md-3">
                      <strong>Title</strong>
                    </div>

                    <div class="col-md-9">
                    </div>
                  </div>

                  <br/>

                  <div class="row">
                    <div class="col-md-3">
                      <strong>Years of experience</strong>
                    </div>

                    <div class="col-md-9">
                    </div>
                  </div>
                </div>
              </div>

              <!-- Work experience ends -->

              <!--  Contact details begins -->
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title">Contact details</h3>
                </div>

                <div class="panel-body">
                  <div class="row">
                    <div class="col-md-3">
                      <%= fa_icon('envelope') %>
                      <strong>Email address</strong>
                    </div>

                    <div class="col-md-9">
                      <%= link_to email(@profile), "mailto:#{email(@profile)}" %>
                    </div>
                  </div>

                  <br/>

                  <div class="row">
                    <div class="col-md-3">
                      <%= fa_icon('globe') %>
                      <strong>Location</strong>
                    </div>

                    <div class="col-md-9">
                      <%= @profile.location_name %>
                    </div>
                  </div>

                  <br/>

                  <div class="row">
                    <div class="col-md-3">
                      <%= fa_icon('clock-o') %>
                      <strong>Timezone</strong>
                    </div>

                    <div class="col-md-9">
                      <%= @profile.user.time_zone.try(:titleize) %>
                    </div>
                  </div>
                </div>
              </div>
              <!--  Contact details ends -->

              <!-- Looking for begins -->

              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title">Looking for</h3>
                </div>

                <div class="panel-body">
                  <div class="row">
                    <div class="col-md-3">
                    </div>

                    <div class="col-md-9">
                    </div>
                  </div>

                  <br/>

                  <div class="row">
                    <div class="col-md-3">
                    </div>

                    <div class="col-md-9">
                    </div>
                  </div>

                  <br/>

                  <div class="row">
                    <div class="col-md-3">
                    </div>

                    <div class="col-md-9">
                    </div>
                  </div>
                </div>
              </div>

              <!-- Looking for ends -->

              <!-- Open for begins -->

              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title">Open for</h3>
                </div>

                <div class="panel-body">
                  <div class="row">
                    <div class="col-md-3">
                    </div>

                    <div class="col-md-9">
                    </div>
                  </div>

                  <br/>

                  <div class="row">
                    <div class="col-md-3">
                    </div>

                    <div class="col-md-9">
                    </div>
                  </div>

                  <br/>

                  <div class="row">
                    <div class="col-md-3">
                    </div>

                    <div class="col-md-9">
                    </div>
                  </div>
                </div>
              </div>

              <!-- Open for ends -->
            </div>

          </div>

        </div>

        <div class="line visible-xs-block"></div>

        <div class="col-sm-3 clearfix">

          <div class="panel panel-danger">
            <div class="panel-heading">
              <h3 class="panel-title">Account settings</h3>
            </div>

            <div class="panel-body">
              <div class="row">
                <div class="col-md-12">
                  <%= link_to edit_user_profile_path(@profile.user) do %>
                    Edit
                    <%= fa_icon("user", class: "pull-right") %>
                  <% end %>

                  <hr/>

                  <%= link_to directory_user_path(@profile.user) do %>
                    Preview
                    <%= fa_icon("eye", class: "pull-right") %>
                  <% end %>

                  <hr/>

                  <%= link_to new_user_password_path(@profile.user) do %>
                    Change Password
                    <%= fa_icon("laptop", class: "pull-right") %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <div class="panel panel-danger">
            <div class="panel-heading">
              <h3 class="panel-title">Profile settings</h3>
            </div>

            <div class="panel-body">
              <div class="row">
                <div class="col-md-12">
                  <p><strong>Privacy level is: </strong> &nbsp; <%= privacy_info_icon(@profile) %></p>

                  <%= privacy_info_message(@profile) %>
                </div>
              </div>


              <hr/>

              <div class="row">

                <div class="col-md-12">
                  <p><strong>Email notifications:</strong></p>

                  <p><strong>Events & marketing:</strong> <%= notification_message(@profile.receive_emails) %></p>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <p><strong>Job alerts:</strong> <%= notification_message(@profile.receive_job_alerts) %></p>
                </div>
              </div>

            </div>
          </div>


      </div>

    </div>

  </div>

</section>
<!-- #content end -->

<script>
  jQuery("#tabs-profile").on("tabsactivate", function (event, ui) {
    jQuery('.flexslider .slide').resize();
  });
</script>
