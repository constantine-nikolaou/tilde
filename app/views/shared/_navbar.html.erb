<div class='navbar navbar-default navbar-static-top' role='navigation'>
  <div class='container'>
    <div class='navbar-header'>
      <button type='button' class='navbar-toggle' data-toggle='collapse' data-target='.navbar-collapse'>
        <span class='sr-only'>Toggle navigation</span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
      </button>
      <%= link_to(image_tag(asset_path('mena_devs_logo_sm.png'), alt: 'MENA Devs'),
                  root_path, :class => 'navbar-brand') %>
    </div>
    <div class='navbar-collapse collapse'>
      <ul class='nav navbar-nav'>
        <%# navbar_link_to('About us',
                           about_path,
                           :active_when => { controller: 'home',
                                             action: 'about' }) %>

        <%= content_tag(:li, class: 'dropdown') do %>
          <% if user_signed_in? %>
            <%= link_to('#', class: 'dropdown-toggle', data: {toggle: 'dropdown'}) do %>
              Slack Group
              <%= fa_icon('caret-down') %>
            <% end %>

            <%= content_tag(:ul, class: 'dropdown-menu') do %>
              <%= content_tag(:li) do %>
                <%= navbar_link_to('Invitations to join Slack group',
                                  new_invitation_path,
                                  :active_when => { controller: 'invitations' }) %>
              <% end %>

              <%= content_tag(:li) do %>
                <%= navbar_link_to('Sent Invitations',
                                  invitations_path) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>

        <%= content_tag(:li, class: 'dropdown') do %>
          <%= link_to('#', class: 'dropdown-toggle', data: {toggle: 'dropdown'}) do %>
            Jobs
            <%= fa_icon('caret-down') %>
          <% end %>

          <%= content_tag(:ul, class: 'dropdown-menu') do %>
            <%= content_tag(:li) do %>
              <%= navbar_link_to('Job board',
                                jobs_path,
                                :active_when => { controller: 'jobs' }) %>
            <% end %>

            <%= content_tag(:li) do %>
              <%= navbar_link_to('Post a job',
                                 new_job_path) %>
            <% end %>
          <% end %>
        <% end %>

        <%= content_tag(:li) do %>
          <%= navbar_link_to('Contact',
                             contact_path,
                             :active_when => { controller: 'home',
                                              action: 'contact'}) %>
        <% end %>

        <!-- <%= content_tag(:li, class: 'dropdown') do %>
          <%= navbar_link_to('Directory',
                             directory_users_path,
                             :active_when => { controller: 'directory/users'}) %>
        <% end %> -->

        <% if user_signed_in? && current_user.admin? %>
          <%= content_tag(:li, class: 'dropdown') do %>
            <%= link_to('#', class: 'dropdown-toggle', data: {toggle: 'dropdown'}) do %>
              Admin panels
              <%= fa_icon('caret-down') %>
            <% end %>

            <%= content_tag(:ul, class: 'dropdown-menu') do %>
              <%= content_tag(:li) do %>
                <%= navbar_link_to('All jobs',
                                  list_jobs_admin_path,
                                  :active_when => { controller: 'jobs' }) %>
              <% end %>

              <!-- <%= content_tag(:li) do %>
                <%= navbar_link_to('All users',
                                   members_path) %>
              <% end %> -->
            <% end %>
          <% end %>
        <% end %>
      </ul>

      <%= content_tag(:ul, class: 'nav navbar-nav navbar-right') do %>
        <% if !user_signed_in? %>
          <li><%= link_to 'Log in', new_user_session_path %></li>
          <li><%= link_to 'Join us', new_user_registration_path %></li>
        <% else %>
          <%= content_tag(:li) do %>
            <%= link_to 'My profile', user_profile_path(current_user) %>
          <% end %>
          <%= content_tag(:li) do %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
          <% end %>
        <% end %>
      <% end %>
    </div><!--/.nav-collapse -->
  </div>
</div>
