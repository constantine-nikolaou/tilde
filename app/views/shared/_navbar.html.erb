<%= content_tag(:nav, id: 'primary-menu', class: 'dark') do %>

    <%= content_tag(:ul) do %>

      <%= content_tag(:li) do %>

        <%= navbar_link_to('Job Board',
                          jobs_path,
                          :active_when => { controller: 'jobs' }) %>
      <% end %>

      <%= content_tag(:li) do %>

        <%= navbar_link_to('Open Projects',
                          'https://github.com/mena-devs') %>
      <% end %>

      <%= content_tag(:li) do %>

        <%= navbar_link_to('Contact us',
                           contact_path,
                           :active_when => { controller: 'home',
                                             action: 'contact'}) %>
      <% end %>

      <!-- user section -->
      <% if user_signed_in? %>

        <%= content_tag(:li) do %>
          <%= link_to('#', class: 'dropdown-toggle', data: {toggle: 'dropdown'}) do %>
            Slack Group
            <%= fa_icon('caret-down') %>
          <% end %>

          <%= content_tag(:ul) do %>
            <%= content_tag(:li) do %>
              <%= navbar_link_to('New Invitations',
                                 new_invitation_path,
                                 :active_when => { controller: 'invitations' }) %>
            <% end %>

            <%= content_tag(:li) do %>
              <%= navbar_link_to('History',
                                  invitations_path) %>
            <% end %>
          <% end %>

          <!-- admin section -->
          <% if current_user.admin? %>
            <%= content_tag(:li) do %>
              <%= link_to('#', class: 'dropdown-toggle', data: {toggle: 'dropdown'}) do %>
                Admin
                <%= fa_icon('caret-down') %>
              <% end %>

              <%= content_tag(:ul, class: 'dropdown-menu') do %>
                <%= content_tag(:li) do %>
                  <%= navbar_link_to('Jobs',
                                    list_jobs_admin_path,
                                    :active_when => { controller: 'jobs' }) %>
                <% end %>
              <% end %>

            <% end %>
          <% end %>
          <!-- admin section: end -->

        <% end %>
        <!-- user section: end -->

      <% end %>
    <% end %>

    <%= content_tag(:ul) do %>

      <% if !user_signed_in? %>
        <%= content_tag(:li) do %>
          <%= link_to(new_user_session_path) do %>
            Sign in
          <% end %>
        <% end %>

        <%= content_tag(:li) do %>
          <%= link_to(new_user_registration_path) do %>
            Sign up
          <% end %>
        <% end %>

      <% else %>

        <%= content_tag(:li) do %>
          <%= link_to 'My profile', user_profile_path(current_user) %>
        <% end %>

        <%= content_tag(:li) do %>
          <%= link_to('Logout', destroy_user_session_path) %>
        <% end %>

      <% end %>
    <% end %>
<% end %>
