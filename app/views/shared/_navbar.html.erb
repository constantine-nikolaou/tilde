<%= content_tag(:nav, id: 'primary-menu', class: 'dark') do %>

    <%= content_tag(:ul) do %>

      <%= content_tag(:li) do %>

        <% if user_signed_in? %>
          <%= link_to('#', class: 'dropdown-toggle', data: {toggle: 'dropdown'}) do %>
            Slack Group
            <%= fa_icon('caret-down') %>
          <% end %>

          <%= content_tag(:ul) do %>
            <%= content_tag(:li) do %>
              <%= navbar_link_to('Invitations to join Slack group',
                                 new_invitation_path,
                                 :active_when => { controller: 'invitations' }) %>
            <% end %>

            <%= content_tag(:li) do %>
              <%= navbar_link_to('Sent Invitations',
                                  invitations_path) %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= content_tag(:li) do %>

        <%= navbar_link_to('About',
                           about_path,
                           :active_when => { controller: 'home',
                                             action: 'about' }) %>
      <% end %>

      <%= content_tag(:li) do %>

        <%= navbar_link_to('Job Board',
                          jobs_path,
                          :active_when => { controller: 'jobs' }) %>
      <% end %>

      <%= content_tag(:li) do %>

        <%= navbar_link_to('Members',
                          jobs_path,
                          :active_when => { controller: 'jobs' }) %>
      <% end %>

      <%= content_tag(:li) do %>

        <%= navbar_link_to('Open Projects',
                          'https://github.com/mena-devs') %>
      <% end %>

      <%= content_tag(:li) do %>

        <%= navbar_link_to('Contact us',
                           contact_path,
                           :active_when => { controller: 'home',
                                             action: 'contact'}) %>
      <% end %>

      <% if user_signed_in? && current_user.admin? %>
        <%= content_tag(:li) do %>
          <%= link_to('#', class: 'dropdown-toggle', data: {toggle: 'dropdown'}) do %>
            Admin panels
            <%= fa_icon('caret-down') %>
          <% end %>

          <%= content_tag(:ul, class: 'dropdown-menu') do %>
            <%= content_tag(:li) do %>
              <%= navbar_link_to('All jobs',
                                list_jobs_admin_path,
                                :active_when => { controller: 'jobs' }) %>
            <% end %>
          <% end %>

        <% end %>
      <% end %>
    <% end %>

    <%= content_tag(:ul) do %>

      <% if !user_signed_in? %>
        <%= content_tag(:li) do %>
          <%= link_to(new_user_session_path) do %>
            Sign in
          <% end %>
        <% end %>

        <%= content_tag(:li) do %>
          <%= link_to(new_user_registration_path) do %>
            Sign up
          <% end %>
        <% end %>

      <% else %>

        <%= content_tag(:li) do %>
          <%= link_to 'My profile', user_profile_path(current_user) %>
        <% end %>

        <%= content_tag(:li) do %>
          <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
        <% end %>

      <% end %>
    <% end %>
<% end %>
