<%= content_tag(:nav, id: 'primary-menu', class: 'dark') do %>

    <%= content_tag(:ul) do %>

      <%= content_tag(:li) do %>

        <%= navbar_link_to('Job Board',
                          jobs_path,
                          :active_when => { controller: 'jobs' }) %>
      <% end %>

      <%= content_tag(:li) do %>
        <%= link_to('#', class: 'dropdown-toggle', data: {toggle: 'dropdown'}) do %>
          Community
          <%= fa_icon('caret-down') %>
        <% end %>

        <%= content_tag(:ul, class: 'dropdown-menu') do %>

          <%= content_tag(:li) do %>
            <%= navbar_link_to('Members Directory',
                               directory_users_path,
                               :active_when => { controller: 'users',
                                                 action: 'index'}) %>
          <% end %>

          <%= content_tag(:li) do %>

            <%= navbar_link_to('Open Projects',
                               'https://github.com/mena-devs',
                               target: '_blank') %>
          <% end %>

          <%= content_tag(:li) do %>

            <%= navbar_link_to('Events',
                               events_path,
                               :active_when => { controller: 'home',
                                                 action: 'events'}) %>
          <% end %>

          <%= content_tag(:li) do %>
            <%= navbar_link_to('Partners',
                              partners_path,
                              :active_when => { controller: 'home',
                                                action: 'partners' }) %>
          <% end %>
        <% end %>

      <% end %>

      <%= content_tag(:li) do %>

        <%= navbar_link_to('Contact us',
                           contact_path,
                           :active_when => { controller: 'home',
                                             action: 'contact'}) %>
      <% end %>

      <!-- user section -->
      <% if user_signed_in? %>

        <%= content_tag(:li) do %>
          <%= link_to('#', class: 'dropdown-toggle', data: {toggle: 'dropdown'}) do %>
            Slack Group
            <%= fa_icon('caret-down') %>
          <% end %>

          <%= content_tag(:ul) do %>
            <%= content_tag(:li) do %>
              <%= navbar_link_to('Create New Invitation',
                                 new_invitation_path,
                                 :active_when => { controller: 'invitations' }) %>
            <% end %>

            <%= content_tag(:li) do %>
              <%= navbar_link_to('View Invitations Archive',
                                  invitations_path) %>
            <% end %>
          <% end %>

          <!-- admin section -->
          <% if current_user.admin? %>
            <%= content_tag(:li) do %>
              <%= link_to('#', class: 'dropdown-toggle', data: {toggle: 'dropdown'}) do %>
                Administration
                <%= fa_icon('caret-down') %>
              <% end %>

              <%= content_tag(:ul, class: 'dropdown-menu') do %>
                <%= content_tag(:li) do %>
                  <%= navbar_link_to('Admin Dashboard',
                                    private_dashboard_path,
                                    :active_when => { controller: 'dashboard' }) %>
                <% end %>

                <%= content_tag(:li) do %>
                  <%= navbar_link_to('View all jobs',
                                    list_jobs_admin_path,
                                    :active_when => { controller: 'jobs' }) %>
                <% end %>

                <%= content_tag(:li) do %>
                  <%= navbar_link_to('View all members',
                                    members_path,
                                    :active_when => { controller: 'members' }) %>
                <% end %>

                <%= content_tag(:li) do %>
                  <%= navbar_link_to('View all invitations',
                                    list_invitations_admin_path,
                                    :active_when => { controller: 'invitations' }) %>
                <% end %>

                <%= content_tag(:li) do %>
                  <%= navbar_link_to('API Access Management',
                                    private_api_keys_path,
                                    :active_when => { controller: 'api_keys' }) %>
                <% end %>
              <% end %>

            <% end %>
          <% end %>
          <!-- admin section: end -->

        <% end %>
        <!-- user section: end -->

      <% end %>
    <% end %>

    <%= content_tag(:ul) do %>

      <% if !user_signed_in? %>
        <%= content_tag(:li) do %>
          <%= link_to(new_user_session_path) do %>
            Sign in
          <% end %>
        <% end %>

        <%= content_tag(:li) do %>
          <%= link_to(new_user_registration_path) do %>
            Sign up
          <% end %>
        <% end %>

      <% else %>

        <%= content_tag(:li) do %>
          <%= link_to 'My profile', user_profile_path(current_user) %>
        <% end %>

        <%= content_tag(:li) do %>
          <%= link_to('Logout', destroy_user_session_path) %>
        <% end %>

      <% end %>
    <% end %>
<% end %>
